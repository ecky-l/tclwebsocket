test client-connect "websocket client can connect in sync mode" -setup {
} -body {
    set sock [websocket localhost 8015 /test/ping]
} -cleanup {
    close $sock
} -result websocket* -match glob

test client-pong "websocket client can receive pongs" -setup {
} -body {
    set sock [websocket localhost 8015 /test/ping]
    gets $sock
} -cleanup {
    close $sock
} -result done

